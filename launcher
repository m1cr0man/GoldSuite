local theme = {[1]="Blue",[2]=colors.lightBlue,[3]=colors.lightBlue,[4]=colors.white,[5]=colors.lightGray,[6]=colors.gray,[7]=colors.black}
local x, y 
local xmax, ymax
local done = false

xmax, ymax = term.getSize()

function drawBak()
	for y=1, ymax do
		term.setBackgroundColor(theme[2])
		term.setCursorPos(1,y)
		term.clearLine()
	end
	for y=3, ymax do
		term.setBackgroundColor(theme[4])
		term.setCursorPos(1,y)
		term.clearLine()
	end
end

while done == false do
	if term.isColor() then
		drawBak()
		term.setBackgroundColor(theme[2])
		term.setTextColor(theme[7])
	end
	term.setCursorPos(1, 1)
	print("GoldSuite Launcher:")
	if term.isColor() then
		term.setBackgroundColor(theme[4])
		term.setTextColor(theme[6])
	end
	term.setCursorPos(1, 3)
	print("[1] GoldLists")
	_,input = os.pullEvent("char")

	if input == "1" then
		shell.run(shell.resolve("GoldLists/GoldLists"))
		done = true
	end
end